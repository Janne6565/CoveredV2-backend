<configuration>
    <appender name="LOKI" class="com.github.loki4j.logback.Loki4jAppender">
        <batchMaxItems>1000</batchMaxItems>
        <batchTimeoutMs>2000</batchTimeoutMs>
        <http>
            <url>http://loki.default.svc.cluster.local:3100/loki/api/v1/push</url>
        </http>
        <format>
            <label>
                <pattern>app="covered-backend",level="%level",service="spring-boot"</pattern>
            </label>
            <message>
                <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
            </message>
        </format>
    </appender>

    <root level="INFO">
        <appender-ref ref="LOKI"/>
    </root>
</configuration>